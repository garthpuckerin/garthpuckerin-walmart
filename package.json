{
  "name": "garthpuckerin-walmart",
  "version": "1.0.0",
  "description": "Garth Puckerin â€” Walmart Connect Academy LMS Administrator application site. Built with Next.js, TypeScript, and inline styles.",
  "homepage": "https://garthpuckerin-walmart.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/garthpuckerin/garthpuckerin-walmart.git"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint app lib --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint app lib --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "prepare": "husky install",
    "commit": "cz",
    "release": "standard-version"
  },
  "dependencies": {
    "next": "^16.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@commitlint/cz-commitlint": "^19.0.0",
    "@types/node": "20.7.2",
    "@types/react": "18.2.28",
    "@vitest/coverage-v8": "4.0.18",
    "commitizen": "^4.3.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.12",
    "husky": "^9.0.0",
    "jsdom": "^21.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.5",
    "standard-version": "9.5.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
